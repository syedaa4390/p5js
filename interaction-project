<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <title>p5js Template</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.5.3/p5.js"></script>
    
    <script>
    var r;
    var g;
    var b;
    var scale;
    
    function setup() {
    createCanvas(800,600) // sets the canvas size to that
    scale = 1;
    r = random(255)  // declares a variable for random background colors
    g = random(255)  // declares a variable for random background colors
    b = random(255)  // declares a variable for random background colors
    }

    function draw() {
    background(r,g,b);
    fill(random(255),random(255),(random(255))) // makes random clors appear in the diamond
    quad(mouseX,mouseY-60*scale,mouseX-40*scale,mouseY,mouseX,mouseY+scale*60,mouseX+40*scale,mouseY) // draws the diamond
    }

    function keyPressed() {
    r = random(255) // displays a random background color everytime a key is pressed
    g = random(255) // displays a random background color everytime a key is pressed
    b = random(255) // displays a random background color everytime a key is pressed
    }
    
    function mousePressed() {
    scale++; // makes the diamond increase in size, everytime the mouse is pressed
    }
    </script>
</head>

<body>
    <div id="code" class="container-fluid">
        <script src="https://gist-it.appspot.com/github/syedaa4390/p5js/blob/gh-pages/interaction-project.html?footer=0"></script>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
        $(window).bind("load", function() {
            $('#code').before($('#defaultCanvas0').remove());
        });
    </script>
</body>


</html>
